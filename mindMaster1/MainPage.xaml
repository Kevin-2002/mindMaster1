<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mindMaster1.MainPage">

    <ScrollView>
        <!-- create a container for all of the code -->
        <StackLayout x:Name="OverallContent">
            <!-- page 1 -->
            <StackLayout x:Name="Page1" BackgroundColor="Pink" HeightRequest="1300">
                <!-- header -->
                <Label FontSize="Large" Text="Welcome" />

                <!-- paragraph 1-->
                <Label FontSize="Small" Text="&#x0a;The objecive of this game is to crack the sequence code of colors in the order generated by the game under the amount of given guesses!&#x0a;" />

                <!-- header -->
                <Label FontSize="Large" Text="Instructions:&#x0a;" />

                <HorizontalStackLayout>
                    
                    <HorizontalStackLayout>
                        <Image Source="game_grid_example.png" HeightRequest="325" WidthRequest="165"></Image>
                    </HorizontalStackLayout>
                    
                    <StackLayout>
                        <Label FontSize="Small" Text="The image to the left of this text will appear when you start a game&#x0a;The top row contains the answers but they won't reveal until the&#x0a; game is over, there is also a save game button but it isn't usable&#x0a; until the first row is checked.&#x0a;&#x0a;The next row on the left (in orange) containes the guess boxes.&#x0a;On the right the right (in black) are the feedback boxes, these hint&#x0a;how close you are to the answer. &#x0a;&#x0a;On the last row to the right there are colour selectors, think of this&#x0a; section as a painboard. Next to it is the Start buton when it is &#x0a;clicked it is also the button for checking a guess."/>
                    </StackLayout>
                    
                </HorizontalStackLayout>
                
                <!-- paragraph 2 -->
                <Label FontSize="Large" Text="How to change colour of a guess box"/>
                <Label FontSize="Small" Text="Press the start button in the bottom right row to begin the game, then click on the box of the colour you would like to select in the bottom left row (in the dark cyan area), then touch any box to set the selected colour to the box on current guess&#x0a;&#x0a;"/>
                
                <!-- paragraph 3 -->
                <Label FontSize="Large" Text="Differences in difficulties:"/>
                <Label FontSize="Small" Text="Easy: allows all 12 guesses&#x0a;Medium: allows 8 guesses&#x0a;Hard: only allows 4 guesses&#x0a;"/>
                
                <!--paragraph 4-->
                <Label FontSize="Large" Text="What feedback box colours mean:"/>
                <Label FontSize="Small" Text="If green: This means this portion of the guess was the correct colour in the correct spot&#x0a;If yellow: This means that this portion of the guess has the correct colour in the wrong spot&#x0a;&#x0a;"/>

                
                <!-- heading -->
                <Label FontSize="Large" Text="Enter Difficulty and enter new game or load a saved game:"/>
                <!-- buttons -->
                <HorizontalStackLayout HorizontalOptions="Center">
                    <!-- prompt user to select difficulty -->
                    <StackLayout WidthRequest="100" HorizontalOptions="Center" Padding="5">
                        <Button x:Name="BtnEazy" Text="Easy" TextColor="White" BackgroundColor="Purple" Clicked="BtnEazy_Clicked"></Button>
                    </StackLayout>

                    <StackLayout WidthRequest="100" HorizontalOptions="Center" Padding="5">
                        <Button x:Name="BtnMedium" Text="Medium" TextColor="White" BackgroundColor="Purple" Clicked="BtnMedium_Clicked"></Button>
                    </StackLayout>

                    <StackLayout WidthRequest="100" HorizontalOptions="Center" Padding="5">
                        <Button x:Name="BtnHard" Text="Hard" TextColor="White" BackgroundColor="Purple" Clicked="BtnHard_Clicked"></Button>
                    </StackLayout>
                </HorizontalStackLayout>

                <!-- button to make or load games -->
                <HorizontalStackLayout HorizontalOptions="Center" Padding="10">
                    <StackLayout Padding="2">
                        <Button x:Name="BtnNextPage" Text="New Game" TextColor="White" Clicked="BtnNextPage_Clicked" IsEnabled="False"></Button>    
                    </StackLayout>

                    <StackLayout Padding="2">
                        <Button x:Name="BtnLoadSave" Text="Load Game" TextColor="White" BackgroundColor="LimeGreen" Clicked="BtnLoadSave_Clicked"></Button>
                    </StackLayout>
                </HorizontalStackLayout>
            </StackLayout>

            <!-- page 2 -->
            <StackLayout x:Name="Page2" IsVisible="false" BackgroundColor="Pink" HeightRequest="1000">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <!--make a grid for the whole fame to take place on-->
                    <Grid x:Name="GameGrid" Margin="20"
                      HorizontalOptions="Center" VerticalOptions="Start"
                      HeightRequest="650" WidthRequest="330" BackgroundColor="Purple">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="500"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>
                        
                        <!--make a grid to display answer boxviews to initialize in MainPage.xaml.cs-->
                        <Grid x:Name="AnswerGrid" Grid.Row="0" Grid.Column="0" HeightRequest="50" WidthRequest="200" BackgroundColor="PapayaWhip" VerticalOptions="Start">

                        </Grid>

                        <Button x:Name="BtnSaveGame" Text="Save Game" Grid.Row="0" Grid.Column="1" HeightRequest="40" WidthRequest="110" BackgroundColor="Gray" Clicked="BtnSaveGame_Clicked" IsEnabled="False"/>

                        <!--make grid to display guessBoxes to initialize in c#-->
                        <Grid x:Name="GuessGrid" Grid.Row="1" Grid.Column="0" HeightRequest="500" WidthRequest="200" BackgroundColor="Orange" VerticalOptions="StartAndExpand">
                            <!--<Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        -->
                        </Grid>
                        
                        <!--make grid to display feedback boxes to initialize in c#-->
                        <Grid x:Name="FeedbackGrid" Grid.Row="1" Grid.Column="1" HeightRequest="500" WidthRequest="130" BackgroundColor="Black" VerticalOptions="End">

                        </Grid>
                        
                        <!--make grid to display boxviews that change the selected colour -->
                        <Grid x:Name="ChoseColourGrid" Grid.Row="2" Grid.Column="0" HeightRequest="100" WidthRequest="200" BackgroundColor="DarkCyan" VerticalOptions="Start">
                            <!--<Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>-->

                            <!--Boxview below not actually in the grid it was 
                        just to help develop a tapped gesture recogniser-->

                            <!--<BoxView>
                            <BoxView.GestureRecognizers>
                                <TapGestureRecognizer x:Name="GuessBox4" Tapped="GuessBox4_Tapped"/>
                            </BoxView.GestureRecognizers>
                        </BoxView>-->
                        </Grid>
                        
                        <!--make a button of the bottom right to start and check the game-->
                        <Button x:Name="BtnCheckGuess" Text="Start" Clicked="CheckGuess_Clicked" Grid.Row="2" Grid.Column="1" HeightRequest="70" WidthRequest="100" BackgroundColor="LimeGreen" VerticalOptions="Center"></Button>
                    </Grid>
                </HorizontalStackLayout>
                

                <Button x:Name="BtnPreviousPage" Text="Reset Program" TextColor="White" BackgroundColor="Purple" WidthRequest="150" Clicked="BtnPreviousPage_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ScrollView>


</ContentPage>
